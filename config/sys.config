[{kernel, [{logger_level, info},
           {logger, [{handler, default, logger_std_h, #{level => warning}},
                     {handler, info, logger_disk_log_h,
                      #{level => debug,
                        config => #{file => "log/evins",
                                    max_no_files => 5,
                                    max_no_bytes => 4194304},
                        formatter => {logger_formatter,
                                      #{template => [time, " ", pid, " ", level, ": ", msg, "\n"],
                                        single_line => true}}}}
                    ]}]},

 {sasl, []},

 {evins, [{fabric_config, "etc/fsm.conf"},
          {user_config, "etc/fsm-user.conf"},
          {log_output, off}]}].
